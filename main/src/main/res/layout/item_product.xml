<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="39px"
    android:layout_marginTop="37px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:scaleType="fitXY"
        android:layout_width="323px"
        android:layout_height="481px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27px"
        android:textColor="#353E47"
        android:textSize="26px" />

    <TextView
        android:layout_below="@id/tv_name"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:textColor="#353E47"
        android:textSize="24px" />
    <TextView
        android:id="@+id/old_price"
        android:layout_alignTop="@+id/tv_price"
        android:layout_toRightOf="@id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19px"
        android:textColor="#353E47"
        android:textSize="20px" />
</RelativeLayout>
