<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="62px"
            android:layout_height="27px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete"
            android:paddingLeft="35px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filtrate"
            android:layout_centerInParent="true"
            android:textColor="@color/area_color"
            android:textSize="30px"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/bg_242"
        android:visibility="gone">
        <EditText
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#979797"
            android:paddingLeft="34px"
            android:paddingRight="34px"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:cursorVisible="false"
            android:focusable="false"
            android:singleLine="true"
            tools:text="收藏  /   蓝色  /   XL+  /   ￥600-900"/>
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1b1e26"
            android:textSize="28px"
            android:text="@string/clear"
            android:paddingRight="22px"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e6e6e6"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31px"
                    android:layout_marginLeft="33px"
                    android:text="@string/price"
                    android:textColor="#979797"
                    android:textSize="28px"/>
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/fl_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    zhy:max_select="1"
                    android:layout_marginTop="93px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20px">
                </com.zhy.view.flowlayout.TagFlowLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginRight="45px"
            android:layout_marginLeft="45px"
            android:gravity="center"
            android:background="@drawable/shape_222222"
            android:textColor="@color/white"
            android:textSize="30px"
            android:text="@string/subFiletrate"/>
    </LinearLayout>

</LinearLayout>