<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_242">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="51px"
            android:layout_height="match_parent"
            android:paddingLeft="35px"
            android:src="@drawable/back_black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@drawable/shape_gary">
            <ImageView
                android:layout_width="27px"
                android:layout_height="27px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="43px"
                android:layout_centerVertical="true"
                android:src="@drawable/search"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:layout_centerVertical="true"
                android:layout_marginRight="70px"
                android:layout_marginLeft="70px"
                android:gravity="center"
                android:textColorHint="@color/text_163"
                android:textSize="26px"
                android:hint="@string/searchHint"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_242"/>
    <ListView
        android:id="@+id/lv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:background="@color/white">
    </ListView>
</LinearLayout>