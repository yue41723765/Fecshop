<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/rl_bottom">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="140px">
                <ImageView
                    android:id="@+id/location"
                    android:layout_width="30px"
                    android:layout_height="39px"
                    android:layout_marginLeft="35px"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="12px"
                    android:layout_height="20px"
                    android:layout_marginRight="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/more" />
                <LinearLayout

                    android:layout_toRightOf="@id/location"
                    android:layout_toLeftOf="@id/right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:orientation="vertical"
                    android:layout_marginRight="23px">

                    <TextView
                        android:id="@+id/tv_address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="26px"
                        android:textColor="#000000"
                        android:text="@string/changeAddress"/>
                    <TextView
                        android:id="@+id/tv_address_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="29px"
                        android:textSize="24px"
                        android:textColor="#606060"
                        tools:text="收货人：Zhang xiao bai"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@drawable/address_line"
                tools:background="@color/area_color"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3"/>

            <RelativeLayout
                android:id="@+id/rl_shipping"
                android:layout_width="match_parent"
                android:layout_height="121px">
                <TextView
                    android:id="@+id/tv_shipping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:layout_marginLeft="33px"
                    android:text="@string/shipingMethod"
                    android:layout_centerVertical="true"
                    android:textColor="#606060"/>
                <ImageView
                    android:id="@+id/iv_shipping_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_load"
                    android:layout_marginRight="41px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48px"/>
                <TextView
                    android:id="@+id/tv_shipping_Methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_shipping_name"
                    android:layout_toLeftOf="@id/iv_shipping_load"
                    android:layout_marginTop="36px"
                    android:singleLine="true"
                    android:textSize="28px"
                    android:textColor="#000"
                    tools:text="免邮费( 7-20 工作日)"/>
                <TextView
                    android:id="@+id/tv_shipping_price"
                    android:layout_below="@id/tv_shipping_Methods"
                    android:layout_toLeftOf="@id/iv_shipping_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#606060"
                    tools:text="HKBRAM	￥0.00"
                    android:layout_marginTop="15px"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e6e6e6"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3"/>

            <RelativeLayout
                android:id="@+id/rl_pay"
                android:layout_width="match_parent"
                android:layout_height="100px">
                <TextView
                    android:id="@+id/tv_methods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:layout_marginLeft="33px"
                    android:text="@string/payMethod"
                    android:layout_centerVertical="true"
                    android:textColor="#606060"/>
                <ImageView
                    android:id="@+id/iv_methods_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_load"
                    android:layout_marginRight="41px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48px"/>
                <TextView
                    android:id="@+id/tv_methods_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_methods_name"
                    android:layout_toLeftOf="@id/iv_methods_load"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textSize="28px"
                    android:textColor="#000"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e6e6e6"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e6e6e6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117px"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="35px"
                    android:paddingRight="20px"
                    android:hint="@string/addCouponCode"
                    android:textColor="#000000"
                    android:textSize="26px"
                    android:singleLine="true"
                    android:textColorHint="#606060"/>

                <TextView
                    android:id="@+id/tv_coupon_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/addCouponHint"
                    android:textSize="18px"
                    android:visibility="gone"
                    android:textColor="#ee0e33"/>
                <TextView
                    android:id="@+id/tv_coupon_btn"
                    android:layout_width="174px"
                    android:layout_height="54px"
                    android:layout_marginLeft="10px"
                    android:background="@color/area_color"
                    android:textColor="@color/white"
                    android:textSize="22px"
                    android:text="@string/addCoupon"
                    android:gravity="center"
                    android:layout_marginRight="35px"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e6e6e6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="117px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderRemark"
                    android:textSize="26px"
                    android:layout_gravity="center_vertical"
                    android:textColor="#606060"
                    android:paddingLeft="35px"/>
                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="35px"
                    android:paddingRight="20px"
                    android:hint="@string/inputRemark"
                    android:textColor="#000000"
                    android:textSize="25px"
                    android:textColorHint="#606060" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e6e6e6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="103px"
                android:background="@drawable/vpi__tab_unselected_holo"
                android:text="@string/orderList"
                android:gravity="center_vertical"
                android:textColor="#606060"
                android:textSize="26px"
                android:paddingLeft="35px"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="24px"
                    android:text="@string/total"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:gravity="right"
                    android:textSize="24px"
                    android:singleLine="true"
                    android:textColor="#222222"
                    tools:text="￥3,7690.00"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ebebeb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="24px"
                    android:text="@string/weight"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    />
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:gravity="right"
                    android:textSize="24px"
                    android:singleLine="true"
                    android:textColor="#222222"
                    tools:text="￥3,7690.00"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="35px"
                android:background="#ebebeb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="24px"
                    android:text="@string/bulk"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    />
                <TextView
                    android:id="@+id/tv_bulk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="24px"
                    android:textColor="#222222"
                    tools:text="￥3,7690.00"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="35px"
                android:background="#ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="24px"
                    android:text="@string/shipingPrice"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    />
                <TextView
                    android:id="@+id/tv_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:gravity="right"
                    android:textSize="24px"
                    android:singleLine="true"
                    android:textColor="#222222"
                    tools:text="￥3,7690.00"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="35px"
                android:background="#ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9d9d9d"
                    android:textSize="24px"
                    android:text="@string/discount"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    />
                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:gravity="right"
                    android:textSize="24px"
                    android:singleLine="true"
                    android:textColor="#222222"
                    tools:text="￥3,7690.00"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="35px"
                android:background="#ebebeb"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="18px"
                android:background="#f3f3f3" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="213px"
            android:layout_height="match_parent"
            android:background="#222222"
            android:textSize="34px"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/pay"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_memory"
            android:layout_toLeftOf="@id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#222222"
            android:paddingLeft="20px"
            android:paddingRight="45px"
            android:textSize="32px"
            tools:text="￥2,8699.40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/amount"
            android:textSize="28px"
            android:textColor="#919191"
            android:layout_toLeftOf="@id/tv_memory"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</RelativeLayout>