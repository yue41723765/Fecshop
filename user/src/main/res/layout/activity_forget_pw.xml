<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:background="@drawable/vpi__tab_unselected_holo"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@color/white"
            android:singleLine="true"
            android:maxLength="30"
            android:textSize="28px"
            android:textColor="@color/area_color"
            android:textColorHint="@color/text_145"
            android:hint="@string/email"/>

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:background="@color/bg_242" />

        <Button
            android:id="@+id/btn_code"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="149px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textSize="24px"
            android:textColor="@color/text_code"
            android:background="@color/white"
            android:gravity="center"
            android:enabled="false"
            android:text="@string/sendCode" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="@drawable/vpi__tab_unselected_holo"
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@drawable/vpi__tab_unselected_holo"
            android:singleLine="true"
            android:maxLength="30"
            android:textSize="28px"
            android:textColor="@color/area_color"
            android:textColorHint="@color/text_145"
            android:hint="@string/code"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="@drawable/vpi__tab_unselected_holo"
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px">

        <EditText
            android:id="@+id/et_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@drawable/vpi__tab_unselected_holo"
            android:singleLine="true"
            android:maxLength="30"
            android:textSize="28px"
            android:textColor="@color/area_color"
            android:textColorHint="@color/text_145"
            android:hint="@string/inputNewPassword"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="@drawable/vpi__tab_unselected_holo"
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px">

        <EditText
            android:id="@+id/et_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@drawable/vpi__tab_unselected_holo"
            android:singleLine="true"
            android:maxLength="30"
            android:textSize="28px"
            android:textColor="@color/area_color"
            android:textColorHint="@color/text_145"
            android:hint="@string/againPassword"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="85px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:textSize="30px"
        android:enabled="false"
        android:background="@drawable/selector_forget_bg"
        android:gravity="center"/>
</LinearLayout>