<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320px">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="167px"
            android:layout_height="250px"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:background="@color/area_color"
            android:layout_marginLeft="34px"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51px"
            android:layout_marginLeft="59px"
            android:layout_marginRight="39px"
            android:textColor="#0A0A0A"
            android:textSize="32px"
            tools:text="冰韵蓝钉珠针织开衫"
            android:ellipsize="end"
            android:lines="1"
            />
        <TextView
            android:id="@+id/tv_unit"
            android:layout_below="@id/tv_title"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19px"
            android:layout_marginLeft="59px"
            android:layout_marginRight="39px"
            android:textColor="#9D9D9D"
            android:textSize="20px"
            tools:text="颜色：红色     尺码：L"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_below="@id/tv_unit"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:layout_marginLeft="59px"
            android:layout_marginRight="10px"
            android:textColor="#646464"
            android:textSize="24px"
            tools:text="￥5300.00"/>

        <TextView
            android:id="@+id/tv_price_old"
            android:layout_below="@id/tv_price"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:layout_marginLeft="59px"
            android:layout_marginRight="39px"
            android:textColor="#9D9D9D"
            android:textSize="20px"
            tools:text="￥5300"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35px"
        android:background="#E6E6E6"/>
    <!--评分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="51px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_145"
            android:textSize="28px"
            android:text="@string/evaStar"
            android:layout_marginRight="15px"
           />

        <RatingBar
            android:id="@+id/rb_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:isIndicator="false"
            android:stepSize="1"
            style="@style/foodRatingBar"
            android:layout_marginLeft="6px">
        </RatingBar>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35px"
        android:background="#E6E6E6"/>
    <!--概要-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="51px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_145"
            android:textSize="28px"
            android:text="@string/outlin"
            android:layout_marginRight="15px"/>
        <EditText
            android:id="@+id/et_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35px"
            android:textSize="28px"
            android:textColor="@color/area_color"
            android:background="@color/white"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35px"
        android:background="#E6E6E6"/>

    <!--评论-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="115px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="51px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_145"
            android:textSize="28px"
            android:text="@string/evaluation"
            android:layout_marginRight="15px"/>
        <EditText
            android:id="@+id/et_eva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35px"
            android:background="@color/white"
            android:textSize="28px"
            android:textColor="@color/area_color"
            tools:text="123456134561234561234512345123"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35px"
        android:background="#E6E6E6"/>

    <!--验证码-->
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="51px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_145"
            android:textSize="28px"
            android:text="@string/code"
            android:layout_marginRight="15px"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35px"
            android:background="@color/white"
            android:singleLine="true"
            android:textSize="28px"
            android:maxLength="4"
            android:textColor="@color/area_color"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="130px"
            android:layout_height="30px"
            android:scaleType="fitXY"
            android:layout_marginRight="35px"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35px"
        android:background="#E6E6E6"/>

</LinearLayout>