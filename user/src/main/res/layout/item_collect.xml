<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="16px"
    android:layout_marginTop="22px"
    android:layout_marginBottom="16px"
    android:id="@+id/rl_all"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="481px"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="67px"
        android:layout_height="52px"
        android:paddingTop="30px"
        android:paddingRight="15px"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27px"
        android:layout_below="@id/iv_img"
        android:textSize="26px"
        android:textColor="#000"
        tools:text="产妇婚礼礼服"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="24px"
        android:layout_below="@id/tv_title"
        android:textColor="@color/text_100"
        android:textSize="24px"
        tools:text="CNY ￥365.00"/>
    <TextView
        android:id="@+id/tv_content_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/tv_content"
        android:layout_marginLeft="5px"
        android:layout_alignBottom="@id/tv_content"
        android:textSize="22px"
        tools:text="CNY ￥365.00"
        android:textColor="@color/text_100"/>
</RelativeLayout>