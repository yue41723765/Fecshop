               <android.support.design.widget.TabLayout
                   android:id="@+id/tl_title"
                   android:layout_width="match_parent"
                   android:layout_height="110px"
                   app:tabIndicatorColor="@color/area_color"
                   app:tabSelectedTextColor="@color/area_color"
                   app:tabTextColor="@color/gray"
                   app:tabIndicatorHeight="4px">
               </android.support.design.widget.TabLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:background="#e6e6e6"/>
               <com.gtjh.common.view.CustomViewPager
                   android:id="@+id/fragment"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </com.gtjh.common.view.CustomViewPager>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="24px"
                   android:background="#e6e6e6"/>
           </LinearLayout>
       </android.support.v4.widget.NestedScrollView>
   </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <View
        android:id="@+id/view_bottom"
        android:layout_above="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/cb_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="32px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:src="@drawable/collect_false"
                android:layout_marginLeft="44px"/>
            <TextView
                android:layout_toRightOf="@id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/collect"
                android:layout_centerVertical="true"
                android:paddingLeft="23px"
                android:textColor="#3E4548" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_car"
            android:background="@color/area_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="@color/white"
            android:text="@string/addCart"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="83px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="55px"
            android:layout_height="match_parent"
            android:paddingLeft="36px"
            android:src="@drawable/back_black"/>
        <ImageView
            android:id="@+id/iv_bag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/shopping_bag"
            android:paddingRight="36px"/>
    </RelativeLayout>
</RelativeLayout>
