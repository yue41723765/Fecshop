<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3e4548"
        android:layout_margin="34px"
        android:singleLine="true"
        android:textSize="26px"
        tools:text="衣服很不错"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="34px"
        android:layout_marginRight="34px"
        android:gravity="bottom">
        <com.gtjh.common.view.StarBar
            android:id="@+id/sb_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ratingbar:starCount="5"
            ratingbar:starDistance="6px"
            ratingbar:starEmpty="@drawable/ic_star_border"
            ratingbar:starFill="@drawable/ic_star_bright"
            ratingbar:starSize="26px"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:textColor="#b5b5b5"
            android:textSize="20px"
            tools:text="1994-12-01"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:textColor="#6b6b6b"
        android:layout_margin="35px"
        tools:text="起球，严重起球，还不如拼多多十块钱的好！"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="18px"
        android:background="#f3f3f3"/>
</LinearLayout>